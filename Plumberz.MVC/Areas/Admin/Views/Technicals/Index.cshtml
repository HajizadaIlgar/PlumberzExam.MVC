@model List<Technical>
@{
    ViewData["Title"] = "Index";
}
<table class="table">
    <a style="width:100px" class="btn btn-success" asp-action="Create" asp-controller="Technicals">Create</a>
    <a style="width:60px" class="btn btn-warning" href="http://localhost:5148/" target="_blank">Ana Sehife</a>
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Full Name</th>
            <th scope="col">Image</th>
            <th scope="col">Department</th>
            <th action="3" scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.FullName</td>
                <td><img src="~/images/tech/@item.ImageUrl" width="100"/></td>
                <td>@item.Department.DepartmentName</td>
                <td>
                    <a style="width:100px" class="btn btn-danger" asp-action="Update" asp-controller="Technicals" asp-route-id="@item.Id">Update</a>
                </td>
                <td>
                    <a style="width:100px" class="btn btn-warning" asp-action="Delete" asp-controller="Technicals" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>