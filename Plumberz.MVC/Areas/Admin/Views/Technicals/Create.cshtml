@model TechnicalCreateVM
@{
    ViewData["Title"] = "Create";
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Department create</h6>
    </div>
    <div asp-validation-summary="ModelOnly"></div>
    <div class="card-body">
        <form enctype="multipart/form-data" method="post">
            <div class="form-group">
                <label asp-for="FullName"></label>
                <input class="form-control" asp-for="FullName">
                <span class="text-danger" asp-validation-for="FullName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image"></label>
                <input accept="image/*" class="form-control" asp-for="Image">
                <span class="text-danger" asp-validation-for="Image"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentId"></label>
                <select asp-for="DepartmentId" asp-items='new SelectList(ViewBag.Department,"Id","DepartmentName")'>
                   <option>Select</option>
                </select>
                <span class="text-danger" asp-validation-for="DepartmentId"></span>
            </div>
            <button  type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>