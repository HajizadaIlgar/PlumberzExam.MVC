@model List<Department>
@{
    ViewData["Title"] = "Index";
}

<table class="table">
            <a style="width:100px" class="btn btn-success" asp-action="Create" asp-controller="Department">Create</a>
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Department Name</th>
            <th action="3" scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <th scope="row">@item.Id</th>
            <td>@item.DepartmentName</td>
                <td>
                    <a style="width:100px" class="btn btn-danger" asp-action="Update" asp-controller="Department" asp-route-id="@item.Id">Update</a>
                </td>
                <td>
                    <a style="width:100px" class="btn btn-warning" asp-action="Delete" asp-controller="Department" asp-route-id="@item.Id">Delete</a>
                </td>
        </tr>
        }

    </tbody>
</table>